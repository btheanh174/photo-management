@using PhotoManager.Models;
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_admin.cshtml";
    PhotoEntities dc = new PhotoEntities();
}

<div class="block-header">
    <h2>DASHBOARD</h2>
</div>
<!-- Widgets -->
<div class="row clearfix">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="info-box bg-pink hover-expand-effect">
            <div class="icon">
                <i class="material-icons">image</i>
            </div>
            <div class="content">
                <div class="text">IMAGES</div>
                <div class="number count-to" data-from="0" data-to="@dc.IMAGEs.Count()" data-speed="1000" data-fresh-interval="20">125</div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="info-box bg-cyan hover-expand-effect">
            <div class="icon">
                <i class="material-icons">photo_album</i>
            </div>
            <div class="content">
                <div class="text">ALBUM</div>
                <div class="number count-to" data-from="0" data-to="@dc.ALBUMs.Count()" data-speed="1000" data-fresh-interval="20">257</div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <div class="info-box bg-orange hover-expand-effect">
            <div class="icon">
                <i class="material-icons">face</i>
            </div>
            <div class="content">
                <div class="text">USER</div>
                <div class="number count-to" data-from="0" data-to="@dc.USERs.Count()" data-speed="1000" data-fresh-interval="20">1225</div>
            </div>
        </div>
    </div>
</div>


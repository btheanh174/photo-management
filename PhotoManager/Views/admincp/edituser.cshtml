@model PhotoManager.Models.USER
@using PhotoManager.Models;
@{
    ViewBag.Title = "editAlbum";
    PhotoEntities dc = new PhotoEntities();
    Layout = "~/Views/Shared/_admin.cshtml";
    var listUsergroup = new List<SelectListItem>();


    listUsergroup.Add(new SelectListItem { Text = "Admin", Value = "Admin" });

    listUsergroup.Add(new SelectListItem { Text = "Registered", Value = "Registered" });
    
    

}
@section css {
    <!-- Bootstrap Select Css -->
    <link href="~/Content/Admin/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />

}
@section js {
    <!-- Select Plugin Js -->
    <script src="~/Content/Admin/plugins/bootstrap-select/js/bootstrap-select.js"></script>
    <!-- Jquery Validation Plugin Css -->
    <script src="~/Content/Admin/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/Content/Admin/js/pages/forms/form-validation.js"></script>
    <!-- JQuery Steps Plugin Js -->
    <script src="~/Content/Admin/plugins/jquery-steps/jquery.steps.js"></script>
}
<div class="block-header">
    <h2>ALBUM</h2>
</div>
<!-- Basic Examples -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    EDIT ALBUM
                    <small>edit</small>
                </h2>

            </div>
            @using (Html.BeginForm())
            {
               
               
                
                <div class="body">
                    @if (ViewData.ModelState.Keys.Any(k=> ViewData.ModelState[k].Errors.Any())) { 
                    <div class="alert bg-teal alert-dismissible">
                        <button class="close" data-dismiss="success" aria-hidden="true">&times;</button>
                        @Html.ValidationSummary(true, "Edit Success")
                    </div>
                    }

                    <div class="row clearfix">




                        <div class="col-sm-12">
                            <div class="form-group form-float">
                                <label class="form-label">ID User</label>
                                <div class="form-line">
                                    @Html.TextBoxFor(u => u.IDUSER, new {@type = "text", @class = "form-control", @id = "name"})
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <label class="form-label">Name User</label>
                                <div class="form-line">
                                    @Html.TextBoxFor(u => u.NAME, new {@type = "text", @class = "form-control", @id = "name"})
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <label class="form-label">NEW PASSWORD</label>
                                <div class="form-line">

                                    @Html.TextBoxFor(u => u.PASSWORD, new {@type = "password", @class = "form-control", @id = "name"})
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <label class="form-label">MAIL</label>
                                <div class="form-line">

                                    @Html.TextBoxFor(u => u.MAIL, new {@type = "text", @class = "form-control", @id = "name"})
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-12">

                            <div class="form-group form-float">
                                <label class="form-label">User</label>
                                <div class="form-line">

                                    @Html.DropDownListFor(m => m.USERGROUP, listUsergroup, "UserGroup", new {@class = "form-control show-tick"})


                                </div>
                            </div>


                        </div>
                    </div>





                </div>
    <button type="submit" value="Save" class="btn bg-purple btn-block btn-lg waves-effect"><i class="material-icons">mode_edit</i></button>
            }
        </div>

    </div>
</div>




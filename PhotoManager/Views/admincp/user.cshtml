@model IEnumerable<PhotoManager.Models.USER>

@{
    ViewBag.Title ="user";
    
    Layout = "~/Views/Shared/_admin.cshtml";
}
@section css {
        <!-- Sweetalert Css -->
<link href="~/Content/Admin/plugins/sweetalert/sweetalert.css" rel="stylesheet" />

}
@section js {
        <!-- SweetAlert Plugin Js -->
<script src="~/Content/Admin/plugins/sweetalert/sweetalert.min.js"></script>
}
<div class="block-header">
    <h2>ALBUM</h2>
</div>
<!-- Basic Examples -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    BASIC EXAMPLE 
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);">Action</a></li>
                            <li><a href="javascript:void(0);">Another action</a></li>
                            <li><a href="javascript:void(0);">Something else here</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                
                @if (Session["error"]!=null)
                {
                    <div class="alert alert-danger">
                        <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        @Html.ValidationSummary(false, "Errors: Has Photo in Album ")
                    </div>
                    Session["error"] = null;
                }
               
                <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                    <thead>
                    <tr>

                        <th>IDUSER</th>
                        <th>NAMEUSER</th>
                        <th>EMAIL</th>

                        <th>USERGROUP</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>

                        <th>IDUSER</th>
                        <th>NAMEUSER</th>
                        <th>EMAIL</th>

                        <th>USERGROUP</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDUSER)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MAIL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.USERGROUP)
                            </td>

                            <td>
                                <a href="@Url.Action("deleteuser", new {id = item.IDUSER})" type="button" class="btn bg-red waves-effect">
                                    <i class="material-icons">delete</i>
                                </a>

                                <a href="@Url.Action("edituser", new {id = item.IDUSER})" type="button" class="btn bg-purple  waves-effect">
                                    <i class="material-icons">mode_edit</i>
                                </a>


                            </td>
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

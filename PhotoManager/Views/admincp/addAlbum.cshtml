@model PhotoManager.Models.ALBUM
@using PhotoManager.Models;

@{
    ViewBag.Title = "AddAlbum";
    PhotoEntities dc = new PhotoEntities();
    Layout = "~/Views/Shared/_admin.cshtml";
    var listItems = new List<SelectListItem>();
    
    foreach (var a in dc.USERs)
    {
        listItems.Add(new SelectListItem {Text = a.IDUSER, Value = a.IDUSER});
    }                
    
}
@section css {
        <!-- Bootstrap Select Css -->
<link href="~/Content/Admin/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />

}
@section js {
    <!-- Select Plugin Js -->
    <script src="~/Content/Admin/plugins/bootstrap-select/js/bootstrap-select.js"></script>
   <!-- Jquery Validation Plugin Css -->
    <script src="~/Content/Admin/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/Content/Admin/js/pages/forms/form-validation.js"></script>
    <!-- JQuery Steps Plugin Js -->
    <script src="~/Content/Admin/plugins/jquery-steps/jquery.steps.js"></script>
}
<div class="block-header">
    <h2>ALBUM</h2>
</div>
<!-- Basic Examples -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Add ALBUM
                    <small>Add</small>
                </h2>

            </div>
@using (Html.BeginForm("addAlbum", "Admincp", FormMethod.Post, new { @id = "form_validation" }))
{
    <div class="body">
        @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
{
    <div class="alert bg-teal alert-dismissible">
        <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @Html.ValidationSummary(false, "Sucess: ")
    </div>
}
        <div class="row clearfix">

            <div class="col-sm-12">
                <div class="form-group">
                    <div class="form-line">
                        <input type="text" class="form-control" placeholder="ID" disabled>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <label class="form-label">Name Album</label>
                    <div class="form-line">

                        @Html.TextBoxFor(u => u.NAMEALBUM, new {@type = "text", @class = "form-control", @id = "name"})
                    </div>
                </div>
            </div>
        </div>

        <div class="row clearfix">
            <div class="col-sm-12">
               
                <div class="form-group form-float">
                    <label class="form-label">User</label>
                    <div class="form-line">

                        @Html.DropDownListFor(m => m.IDUSER, listItems, "User", new { @class = "form-control show-tick" })


                    </div>
                </div>
                

</div>

            <div class="col-sm-12">
                <div class="form-group">
                    <label class="form-label">Description</label>
                    <div class="form-line">
                        @Html.TextAreaFor(u => u.DESCRIPTION_, new {@placeholder = "Description", @id = "Description", @class = "form-control no-resize", @rows = "4"})


                    </div>
                </div>
            </div>
        </div>



    </div>
    <button type="submit" class="btn bg-purple btn-block btn-lg waves-effect"><i class="material-icons">library_add</i></button>
}
     </div>

    </div>
</div>
